<%= form_with(url: "/admin/images", multipart: false) do |form| %>
  <%= form.file_field :picture, class: 'govuk-file-upload govuk-form-group' %>
  <% if notice.present? then %>
    <%= form.text_field :picture_name, class: 'govuk-input govuk-form-group govuk-input--error' %>
  <% else %>
    <%= form.text_field :picture_name, class: 'govuk-input govuk-form-group' %>
  <% end %>
  
  <%= form.submit 'Upload', class: 'govuk-button govuk-form-group' %>
<% end %>
